{
  "openapi": "3.0.0",
  "info": {
    "description": "Welcome to the HRMS (Human Resource Management System) API documentation. This API provides endpoints to manage various aspects of human resource operations within your organization, including employee management, departmental operations, time off requests, payroll processing, attendance tracking, and report generation. All endpoints require authentication via API key. JSON format is used for data exchange. Rate limits are enforced to prevent abuse",
    "version": "1.0.0",
    "title": "HRMS",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "yogendraverma325@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key",
        "description": "Your API key for authentication"
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "User Login",
        "description": "Authenticate a user using their email and password.",
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "User's email address.",
                    "example": "yogi@teamcomputers.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "User's password.",
                    "example": "test1234"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "JWT token for authenticated user."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Bad Request - Invalid request body."
          }
        }
      }
    }
  }
}
